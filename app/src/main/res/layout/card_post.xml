<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/cardPostImageView"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_photo_black_48" />

        <TextView
            android:id="@+id/cardPostTxtvAlcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="제목"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardPostImageView"
            />

        <RatingBar
            android:id="@+id/cardPostRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:isIndicator="true"
            android:rating="1"
            android:theme="@style/RatingBar"
            app:layout_constraintTop_toBottomOf="@+id/cardPostTxtvAlcohol"
            app:layout_constraintStart_toStartOf="@+id/cardPostTxtvAlcohol"/>

        <TextView
            android:id="@+id/cardPostTxtvRatingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/cardPostRatingBar"
            app:layout_constraintTop_toTopOf="@+id/cardPostRatingBar"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/cardPostTxtvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가나다라마바"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@+id/cardPostTxtvRatingNum"
            app:layout_constraintTop_toTopOf="@+id/cardPostRatingBar"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>